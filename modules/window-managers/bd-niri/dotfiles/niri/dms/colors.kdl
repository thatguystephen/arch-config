layout {
    background-color "transparent"

    focus-ring {
        active-color   "#c7bfff"
        inactive-color "#919191"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#c7bfff"
        inactive-color "#919191"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#c7bfff"
        inactive-color "#919191"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#c7bfff80"
    }
}

recent-windows {
    highlight {
        active-color   "#453a8e"
        urgent-color   "#ffb4ab"
    }
}
