layout {
    background-color "transparent"

    focus-ring {
        active-color   "#c2c1ff"
        inactive-color "#919191"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#c2c1ff"
        inactive-color "#919191"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#c2c1ff"
        inactive-color "#919191"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#c2c1ff80"
    }
}

recent-windows {
    highlight {
        active-color   "#3d3c8f"
        urgent-color   "#ffb4ab"
    }
}
